@model Assignment.Models.GithubSearchObject

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="mt-3 mb-3">Top 25 starred Github Repositories: @ViewBag.SelectedRange</h2>
    @Html.ActionLink("Go Back", "Index", "Home")
    <table id="repo-table">
        <thead>
            <tr>
                <th scope="col">Repository Name/Author</th>
                <th scope="col">Stars</th>
                <th scope="col">Created At</th>
                <th scope="col">Link</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.Items)
                {
                    <tr>
                        <td><strong>@item.Full_Name</strong></td>
                        <td>
                            <span><i class="far fa-star"></i> @item.Stargazers_count</span>
                        </td>
                        <td>@item.Created_At.AsDateTime()</td>
                        <td><a target="_blank" class="btn btn-info btn-sm" href="@item.Html_url"><i class="fab fa-github"></i> Click me</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function() {
        $('#repo-table').DataTable({
            "ordering": false
        });
    });
</script>